<p id="notice"><%= notice %></p>

<div id="cats">
    <div class="row">
        <% @cats.each do |cat| %>
            <div class= "col-xs-6 col-md-3 col-lg-3 cat">
                <%= link_to cat do %>
                    <div class="cat thumbnail">
                        <%= image_tag cat.image_url.to_s %>
                        <div class="caption"><%= cat.name %></div>
                    </div>
                <%end%>
            </div>
        <% end %>
        <br class="clear"/>
    </div>
    <%= link_to '<button type="button" class="btn btn-default" >Add new cat</button>'.html_safe, new_cat_path %>
</div>

